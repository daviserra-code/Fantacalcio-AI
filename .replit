entrypoint = "main.py"
modules = ["python-3.11:v14-20231207-2f65342"]

hidden = [".pythonlibs"]

[nix]
channel = "stable-23_05"
packages = ["gdb", "mailutils", "jq"]

[unitTest]
language = "python3"

[env]
REPLIT_KEEP_PACKAGE_DEV_DEPENDENCIES = "1"

[deployment]
run = ["sh", "-c", "gunicorn --bind 0.0.0.0:5000 --workers 1 --timeout 120 --preload web_interface:app"]
deploymentTarget = "cloudrun"

[workflows]
runButton = "Run Fantacalcio Assistant"

[[workflows.workflow]]
name = "Run Fantacalcio Assistant"
author = 40913427
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "gunicorn --bind 0.0.0.0:5000 --workers 1 --timeout 120 --preload web_interface:app"

[[ports]]
localPort = 5000
externalPort = 80
