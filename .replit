entrypoint = "main.py"
modules = ["python-3.11:v14-20231207-2f65342"]

hidden = [".pythonlibs"]

[nix]
channel = "stable-23_05"
packages = ["gdb", "mailutils"]

[unitTest]
language = "python3"

[env]
REPLIT_KEEP_PACKAGE_DEV_DEPENDENCIES = "1"

[deployment]
run = ["sh", "-c", "python web_interface.py"]
deploymentTarget = "cloudrun"

[workflows]
runButton = "Run Fantacalcio Assistant"

[[workflows.workflow]]
name = "Run Fantacalcio Assistant"
author = 40913427
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python web_interface.py --port 8080"

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 8000
externalPort = 8000
