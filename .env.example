# .env.example - Template for environment configuration
# Copy this to .env and fill in your actual values

# ==================== DATABASE ====================
# PostgreSQL connection string
# Format: postgresql://username:password@host:port/database
DATABASE_URL=postgresql://fantacalcio_user:your_password@localhost:5432/fantacalcio_db

# ==================== SECURITY ====================
# Session secret for Flask - MUST be random and secure
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
SESSION_SECRET=your_random_secret_key_here_min_32_chars

# ==================== AI SERVICES ====================
# OpenAI API Key (required for AI features)
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4o-mini
OPENAI_TEMPERATURE=0.20
OPENAI_MAX_TOKENS=600

# HuggingFace Token (required for embeddings)
# Get from: https://huggingface.co/settings/tokens
HUGGINGFACE_TOKEN=hf_your_huggingface_token_here

# ==================== STRIPE (OPTIONAL) ====================
# Stripe API keys for Pro subscriptions
# Get from: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_public_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# ==================== WEB SCRAPING (OPTIONAL) ====================
# Apify API Token for professional web scraping
# Get from: https://console.apify.com/account/integrations
APIFY_API_TOKEN=your_apify_token_here

# ==================== APPLICATION SETTINGS ====================
# Environment: development, production
ENVIRONMENT=development

# Logging level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# Server configuration
HOST=127.0.0.1
PORT=5000

# Deployment detection (leave empty for local dev)
REPLIT_DEPLOYMENT=
REPLIT_DOMAINS=

# ==================== DATA PATHS ====================
# Player roster JSON file
ROSTER_JSON_PATH=./season_roster.json

# ChromaDB paths
CHROMA_PATH=./chroma_db
CHROMA_DB_PATH=./chroma_db
CHROMA_COLLECTION_NAME=fantacalcio_knowledge

# Age data files
AGE_INDEX_PATH=./data/age_index.cleaned.json
AGE_OVERRIDES_PATH=./data/age_overrides.json

# ==================== FEATURE FLAGS ====================
# Enable web fallback for data collection
ENABLE_WEB_FALLBACK=false

# Season filter (e.g., "2024-25")
SEASON_FILTER=2024-25

# Reference year for calculations
REF_YEAR=2025

# ==================== ETL CONFIGURATION ====================
# ETL command to rebuild roster
ETL_CMD=python etl_build_roster.py

# ==================== NOTES ====================
# 1. Never commit the actual .env file to git
# 2. Use strong, unique passwords for production
# 3. Rotate secrets regularly
# 4. Keep API keys confidential
